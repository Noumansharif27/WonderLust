<%- layout("layouts/boilerplate") %>

<body>
  <form
    action="/listings/<%= listing._id %>?_method=PUT"
    method="post"
    class="form needs-validation"
    novalidate
    enctype="multipart/form-data"
  >
    <h2>Edit From</h2>

    <div>
      <label class="form-label" for="title">Title</label>
      <input
        class="form-control"
        type="text"
        name="listing[title]"
        value="<%= listing.title %>"
        id="title"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Duh Dude!</div>
    </div>

    <div>
      <label class="form-label" for="description">Description</label>
      <textarea
        class="form-control"
        type="text"
        name="listing[description]"
        id="description"
        required
      >
    <%= listing.description %></textarea
      >
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Duh Dude!</div>
    </div>

    <div class="mt-3">
      <img src="<%= originalImageUrl %>" alt="originalImage" />
    </div>

    <div>
      <label class="form-label" for="image">Update New Image</label>
      <input
        class="form-control"
        type="file"
        name="listing[image]"
        id="image"
      />
    </div>

    <div>
      <label class="form-label" for="price">Price</label>
      <input
        class="form-control"
        type="number"
        name="listing[price]"
        value="<%= listing.price %>"
        id="price"
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Duh Dude!</div>
    </div>

    <div>
      <label class="form-label" for="country">Country</label>
      <input
        class="form-control"
        type="text"
        name="listing[country]"
        id="country"
        value="<%= listing.country %>"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Duh Dude!</div>
    </div>

    <div>
      <label class="form-label" for="location">Location</label>
      <input
        class="form-control"
        type="text"
        name="listing[location]"
        value="<%= listing.location %>"
        id="location"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Duh Dude!</div>
    </div>

    <button class="btn btn-success" style="margin: 1rem 0">submit</button>
  </form>
</body>
