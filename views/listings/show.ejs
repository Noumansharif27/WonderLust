<%- layout("layouts/boilerplate") %>

<body>
  <div class="row-lg-1 show-card">
    <h2 class="offset-0 col-7">
      <strong><%= listing.title %></strong>
    </h2>
    <div class="card listing-card" style="width: 60%">
      <div class="show-card-img">
        <img
          src="<%= listing.image.url %>"
          alt="listing_image"
          class="card-img-top"
        />
      </div>
      <p class="card-text">
        <strong>Owned By:</strong> <%= listing.owner.username %>
      </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text" style="text-decoration: line-through; opacity: 0.7">
        Rs: 85 &#x20A8;
      </p>

      <p class="card-text"><%= listing.price.toLocaleString("en-pk") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>

      <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-success"
          >Edit</a
        >

        <form
          action="/listings/<%= listing._id %>/delete?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>

  <hr />
  <div class="col-8">
    <h3>Reviews</h3>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div>
        <fieldset class="starability-checkmark">
          <legend>First rating:</legend>
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
            default
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mt-2 mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id=""
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Duh Dude!</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
  </div>

  <div class="col-8 offset-2">
    <h3>All Reviews</h3>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card mt-2 ms-2 col-5">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          >
            Rated: <%= review.rating %> stars
          </p>
        </div>

        <form
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
          class="mb-2"
        >
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</body>
